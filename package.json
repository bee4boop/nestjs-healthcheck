{
	"name": "@bee4boop/nestjs-healthcheck",
	"version": "0.1.1",
	"description": "Simple NestJS Health module that exposes GET /health with uptime and DB status.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bee4boop/nestjs-healthcheck.git"
	},
	"keywords": [
		"nestjs",
		"health",
		"healthcheck",
		"uptime"
	],
	"publishConfig": {
		"access": "public"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"clean": "rm -rf dist",
		"prepublishOnly": "npm run build",
		"test": "jest --config jest.config.js",
		"test:watch": "jest --watch --config jest.config.js"
	},
	"peerDependencies": {
		"@nestjs/common": ">=9 <12",
		"@nestjs/core": ">=9 <12"
	},
	"devDependencies": {
		"@nestjs/common": "^10.0.0",
		"@nestjs/core": "^10.0.0",
		"@nestjs/platform-express": "^10.0.0",
		"@nestjs/testing": "^10.0.0",
		"@types/jest": "^29.5.12",
		"@types/supertest": "^2.0.16",
		"@types/node": "^20.0.0",
		"jest": "^29.7.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.1",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"typescript": "^5.6.3"
	}
}
